{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "types": ["vite/client", "react"],
    "baseUrl": ".",
    "paths": {
      "@common/*": ["../../packages/common/src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "../../packages/common/src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}

